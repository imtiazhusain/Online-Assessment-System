                <input type="text" name="quizTime" onfocus="(this.type = 'time')" onblur="(this.type = 'text')" placeholder="Enter the starting time" required>
                <input type="number"id ="duration" name="quizDuration" placeholder="Enter the duration in Minutes" required>
                <input type="text" placeholder="Enter Subject Name" name="quizSubject" id="qSub" required>
                <!-- <input type="submit" onclick="createQuiz()" value=" Start Create Quiz" required> -->
